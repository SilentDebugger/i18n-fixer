{
  "name": "i18n-fixer",
  "version": "1.0.0",
  "description": "Automatically detect hardcoded strings in React/Expo projects that need i18n",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "i18n-finder": "src/index.js",
    "i18n-fixer": "src/index.js"
  },
  "scripts": {
    "scan": "node src/index.js",
    "test": "node src/index.js --path=./examples"
  },
  "keywords": [
    "i18n",
    "react",
    "expo",
    "internationalization",
    "ast",
    "scanner",
    "cli",
    "hardcoded-strings"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "yargs": "^17.7.2"
  }
}
